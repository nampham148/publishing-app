<%= form_for(current_user.positive_relationships.find_by(post_id: post.id),
             html: { method: :delete },
             remote: true) do |f| %>
  <%= f.submit "Unlike", class: "btn btn-primary" %>
<% end %>
<%= form_for(current_user.negative_relationships.build, remote: true) do |f| %>
  <div><%= hidden_field_tag :like, 0 %></div>
  <div><%= hidden_field_tag :post_id, post.id %></div>
  <%= f.submit "Dislike", class: "btn btn-primary" %>
<% end %>